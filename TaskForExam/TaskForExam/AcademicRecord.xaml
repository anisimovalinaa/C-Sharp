<Page x:Class="TaskForExam.AcademicRecord"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskForExam"
      mc:Ignorable="d" 
      d:DesignHeight="569" d:DesignWidth="940"
      Title="AcademicRecord">

    <Grid>
        <DataGrid x:Name="table" AutoGenerateColumns="True" HorizontalAlignment="Left" Height="510" Margin="24,27,0,0" VerticalAlignment="Top" Width="703" FontSize="15"  FontFamily="Times New Roman">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=list}" ClipboardContentBinding="{x:Null}" Header="Ведомость" CanUserResize="False" Width="350"/>
                <DataGridTextColumn Binding="{Binding Path=student}" ClipboardContentBinding="{x:Null}" Header="Студент" CanUserResize="False" Width="200"/>
                <DataGridTextColumn Binding="{Binding Path=mark}" ClipboardContentBinding="{x:Null}" Header="Оценка" CanUserResize="False" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="786,114,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="Показать успеваемость группы" HorizontalAlignment="Left" Margin="742,185,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="group" HorizontalAlignment="Left" Margin="763,235,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="group_SelectionChanged"/>
        <Label Content="за семестр" HorizontalAlignment="Left" Margin="765,274,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="semester" HorizontalAlignment="Left" Margin="786,318,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="semester_SelectionChanged"/>
        <ComboBox x:Name="disc" HorizontalAlignment="Left" Margin="765,478,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="по дисциплине" HorizontalAlignment="Left" Margin="763,439,0,0" VerticalAlignment="Top"/>
        <Label Content="тип" HorizontalAlignment="Left" Margin="756,360,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="type" HorizontalAlignment="Left" Margin="798,403,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="type_SelectionChanged"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="786,517,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Показать все" HorizontalAlignment="Left" Margin="785,54,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
    </Grid>
</Page>
